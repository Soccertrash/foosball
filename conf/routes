# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# landing page
GET     /                           controllers.Landing.start

# Player page
GET		/player						controllers.PlayerController.index
POST	/player/new					controllers.PlayerController.add
GET		/player/list/:page          controllers.PlayerController.list(page: Integer)
GET		/player/paginatorConfig		controllers.PlayerController.paginatorConfiguration

# Javascript routing
GET    /assets/javascripts/routes      controllers.JavascriptRouter.javascriptRoutes()

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
