# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# landing page
GET     /                           controllers.Landing.start

# Player page
GET		/player						controllers.player.PlayerController.index
POST	/player/new					controllers.player.PlayerController.add
GET		/player/list/:page          controllers.player.PlayerController.list(page: Integer)
GET		/player/paginatorConfig		controllers.player.PlayerController.paginatorConfiguration
GET		/player/update				controllers.player.PlayerController.listenForUpdates
GET		/player/remove/:id			controllers.player.PlayerController.remove(id: Integer)

# Javascript routing
GET    /assets/javascripts/routes      controllers.JavascriptRouter.javascriptRoutes()

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
