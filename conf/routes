# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# landing page
GET     /                           controllers.Landing.land

# Player page
GET		/player						controllers.PlayerController.index
POST	/player/new					controllers.PlayerController.add
GET		/player/list                controllers.PlayerController.list(first: Integer ?= 0, max: Integer ?=10)
GET		/player/amount              controllers.PlayerController.count

# Javascript routing
GET    /assets/javascripts/routes      controllers.JavascriptRouter.javascriptRoutes()

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
